<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <button class="btn btn-primary" id="new-comment-btn">Add Comment</button>

  <div class="row mt-4" id="add-comment">
    <div class="col-md-6">
      <form class="form new-comment-form">
        <div class="form-group">
          <label for="comment-desc">Comment:</label>
          <textarea
            class="form-input"
            id="comment-desc"
            name="comment-desc"
          ></textarea>
        </div>

        <div class="form-group">
          <button
            type="submit"
            class="btn btn-primary submit-comment-btn"
          >Submit</button>
        </div>
      </form>
    </div>
  </div>

  {{#each comments as |comment|}}
    <div class="row mb-4 post">
      <div class="col-md-7">
        <p>
          {{comment.content}}
        </p>
      </div>
      <div class="col-md-5">

        <p>Created by
          {{comment.user.name}}
          on
          {{format_date comment.date_created}}</p>
      </div>

    </div>
  {{/each}}

</div>

<script src="/js/post.js"></script>
